<%= render 'shared/toolbar' %>

<div class="panel panel-primary">
  <!-- Default panel contents -->
  <div class="panel-heading">Manage Pillar</div>
  <div class="panel-body">
    <%= link_to '<i class="fa fa-plus-square"></i> New Pillar'.html_safe, new_pillar_path, class: "btn btn-success" %>
  </div>

  <!-- Table -->
  <table class="table">
    <thead>
      <td>ID</td>
      <td>Pillar Name</td>
      <td>Created At</td>
      <td>Updated At</td>
      <td>Actions</td>
    </thead>
    <tbody>
      <% @pillars.each do |pillar| %>
        <tr>
          <td><%= pillar.id %></td>
          <td>
            <%= pillar.name %>
          </td>
          <td><%= pillar.created_at %></td>
          <td><%= pillar.updated_at %></td>
          <td>
            <%= link_to '<i class="fa fa-pencil-square-o"></i> Edit'.html_safe, edit_pillar_path(pillar), class: "label label-primary" %>
            <%= link_to '<i class="fa fa-times"></i> Remove'.html_safe, pillar_path(pillar), method: :delete, data: { confirm: 'It will remove all associated teams under this pillar. Are you sure want to remove this pillar?' }, class: "label label-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>


